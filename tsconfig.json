{
  "compilerOptions": {
    "target": "ES6",                  // The target ECMAScript version
    "module": "ESNext",               // Specify module system (CommonJS, ESNext, etc.)
    "outDir": "./build",               // Output directory for compiled files
    "strict": true,                   // Enable strict type checking
    "esModuleInterop": true,          // Allow default imports from CommonJS modules
    "resolveJsonModule": true,        // Enable JSON imports
    "moduleResolution": "node",      // Module resolution strategy (Node.js style)
    "allowSyntheticDefaultImports": true, // Allow default imports for CommonJS modules
  },
  "types": ["@types/jest", "benchmark"],
  "include": [
    "src/**/*.ts"                    // The path to your TypeScript source files
  ],
  "exclude": [
    "node_modules"                  // Exclude the node_modules directory
  ]
}
